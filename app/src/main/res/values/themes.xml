<resources xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <!-- Base application theme. -->
    <style name="Theme.TheBubble" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/gradient_purple</item>
        <item name="colorPrimaryVariant">@color/purple_200</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="fontFamily">@font/the_bubble_font</item>
        <item name="android:textSize">22sp</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="PageTitle" parent="Theme.TheBubble">
        <item name="android:textSize">40sp</item>
        <item name="fontFamily">@font/the_bubble_font_bold</item>
        <item name="android:layout_marginTop">40dp</item>
        <item name="android:textColor">@color/white</item>

        <item name="android:shadowDy">5</item>
        <item name="android:shadowDx">7</item>
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowRadius">4</item>
    </style>

    <style name="EditTextHintStyle" parent="Theme.TheBubble">
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/the_bubble_font</item>
    </style>

    <style name="NextButton" parent="Theme.TheBubble">
        <item name="colorSecondary">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="GenderRadioButton" parent="Theme.TheBubble">
        <item name="android:textSize">20sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:background">@drawable/gender_list_selector</item>
        <item name="android:button">@android:color/transparent</item>
    </style>

    <style name="Theme.App2" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        ...
        <item name="textAppearanceLargePopupMenu">@style/TextAppearance.App.Subtitle1</item>
        <item name="textAppearanceSmallPopupMenu">@style/TextAppearance.App.Subtitle1</item>
    </style>

    <style name="TextAppearance.App.Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">

    </style>



</resources>