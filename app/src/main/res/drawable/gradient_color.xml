<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <gradient
                android:startColor="@color/gradient_peach"
                android:centerColor="@color/gradient_pink"
                android:endColor="@color/gradient_purple"
                android:angle="45"
                android:type="linear" />
            <stroke
                android:width="0dp"/>
            <corners
                android:radius="0dp" />
            <padding
                android:left="2dp"
                android:top="2dp"
                android:right="2dp"
                android:bottom="2dp" />
        </shape>
    </item>
</selector>